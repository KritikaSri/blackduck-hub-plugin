<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
	<!-- This jelly script is used for per-project configuration. See global.jelly 
		for a general discussion about jelly script. -->
		
<f:entry field="hubProjectName" title="${%ProjectNameTitle}">
	<f:textbox value="${it.getHubProjectName()}"/>
</f:entry>

<f:entry field="hubProjectRelease" title="${%ProjectReleaseTitle}">
	<f:textbox value="${it.getHubProjectRelease()}"/>
</f:entry>
<f:validateButton title="${%CreateProject}" progress="${%CreateProjectProgress}"
         method="createHubProject" with="hubProjectName,hubProjectRelease" />
<f:entry field="scanName" title="${%ScanInstallationsTitle}">
	<f:select />
</f:entry>
<f:entry field="scanMemory" title="${%MemoryAllocation}">
	<f:textbox value="${it.scanMemory}" default="256"/>
</f:entry>
		
<f:block>
	<f:repeatable var="scans" items="${it.scans}" add="${%AddScan}" minimum="1">
		<table style="width:100%" id="hubBlackDuckTable">
				<f:entry title="${%ScanTarget}" field="scanTarget">
              		<f:textbox value="${scans.getScanTarget()}"/>
            	</f:entry>
      	</table>
      	<f:repeatableDeleteButton value="${%DeleteScan}"/>
	</f:repeatable>
</f:block>
</j:jelly>
