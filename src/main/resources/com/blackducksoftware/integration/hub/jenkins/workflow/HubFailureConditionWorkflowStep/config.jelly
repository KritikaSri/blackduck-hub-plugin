<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
	<!-- This jelly script is used for per-project configuration. See global.jelly 
		for a general discussion about jelly script. -->
		
	<f:block>
		<div>Requires the policy management module in the Hub.</div>
	</f:block>
	<f:entry field="failBuildForPolicyViolations">
		<f:checkbox default="true" />
		<label>${%FailTheBuildPolicyViolations}</label>
	</f:entry>
	
	<f:entry title="${%BuildStateOnFailureTitle}" field="buildStateOnFailure" >
    	<f:select/>
    </f:entry>

</j:jelly>
